/* Variables */
transition-speed = all 0.2s linear
color-principal = #2eaee5
color-secundario = #b51818
color-principal-2 = #1d93bc

@font-face {
  font-family: 'NeoSans';
  src: url('../fonts/neosansstd-medium-webfont.eot');
  src: url('../fonts/neosansstd-medium-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/neosansstd-medium-webfont.woff') format('woff'), url('../fonts/neosansstd-medium-webfont.ttf') format('truetype'), url('../fonts/neosansstd-medium-webfont.svg#NeoSansStdMedium') format('svg');
  font-weight: normal;
  font-style: normal;
}

h1,h2,h3,h4,h5,h6,p
 line-height: 1.45

h1
	font-size: 2.2em
h2
	font-size: 1.8em
h3
	font-size: 1.6em
h4
	font-size: 1.4em
h5
	font-size: 1.2em
h6
	font-size: 1.1em
p
	font-size: 1.1em

b
	font-weight bolder !important
html
	overflow-x hidden!important
body
	background #f7f7f7
	font-family: 'Open Sans', sans-serif;
	font-size 20px
	overflow-x hidden!important
.wrapper
	width 90%
	margin 0 auto
	position relative
.clearfix
	clear both
.button
	background color-principal-2
	border none
	color #FFF
	margin 0 auto
	display block
	height 46px
	text-align center
	line-height 46px
	font-size 19px
	width: 100%
.button:hover, .button:active
	color #FFF
	text-decoration none
.button:focus {
	background-color color-principal
	color #FFF
	text-decoration none
}
.button.contact
	width: 85%
.button.history
	background-color color-principal
.no-padding-top
	padding-top 0!important
.margin-top-30
	margin-top 30px
/* Icons */
.icon
	width 25px
	height 25px
	display block
	float left
/* Login */
body.login
	background #000
	.container
		width 80%
		.logo
			width 35%
			margin 0 auto
			margin-bottom 30px
		input
			margin-bottom -1px
		.button
			margin-top 25px
		p
			font-size 0.8em
			color #999
			margin-top 10px
			text-align center

/* Header */
header
	width 100%
	height 50px
	background #000
	position fixed
	z-index 5
	a.volver
		width 30px
		height 50px
