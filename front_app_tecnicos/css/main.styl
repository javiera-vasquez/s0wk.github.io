		position absolute
		left 0
		color #FFF
		font-size 0.8em
		margin-top 12px
	a.button-left.reloj
		padding-left 30px
		background url('../img/reloj.svg') no-repeat 0 center
		background-size 25px
	h1
		color #FFF
		text-align center
		margin 0
		font-size 1.2em
		line-height 50px
		display block
		span
			position relative
	span.logo
		width 30px
		display block
		position absolute
		left -35px
		top -15px
		img
			width 100%
	.menu
		width 50px
		height 50px
		position absolute
		right 0
		top 0
		cursor pointer
		img
			width 50%
			margin-left 15%
			margin-top 13px
			height auto
	.close-menu
		display none
		background #505d65

